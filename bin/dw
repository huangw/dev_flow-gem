#!/usr/bin/env ruby
# encoding: utf-8
# vi: ft=ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'commander/import'
require 'dev_flow'

# :name is optional, otherwise uses the basename of this executable
program :name, 'dw: Project Develop Flow Management Tool Based on Git'
program :version, DevFlow::VERSION
program :description, 'Provide convenient commands to guide development flow like, and gather project information from source files.
'

global_option '-d', '--debug', 'Display debug messages'

command :config do |c|
  c.syntax = 'dw config'
  c.description = 'Display or update configurations'
  c.action do |args, options|
    DevFlow::Command::Config.new(args, options).run!
  end
end

never_trace!
# default_command :help
